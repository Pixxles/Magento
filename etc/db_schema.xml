<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="payment_gateway_wallets" resource="default" engine="innodb" comment="Payment Gateway Wallets Table">
        <column xsi:type="text" name="merchant_id" nullable="false" comment="Merchant ID"/>
        <column xsi:type="varchar" name="customer_email" nullable="false" length="100" comment="Customer email"/>
        <column xsi:type="varchar" name="wallet_id" nullable="false" length="100" comment="Wallet Id"/>
    </table>
</schema>
